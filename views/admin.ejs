<!DOCTYPE html>
<html lang="en">
    <head>
        <title>Admin</title>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <style>
            table, tr, td{
                border: 1px solid black;
                border-collapse: collapse;
            }
        </style>
    </head>
    <body>
        <table>
            <tr>
                <td>No.</td>
                <td>Title</td>
                <td>Description</td>
                <td>Image</td>
                <td>Video</td>
                <td>Modify</td>
            </tr>
            <% arrProducts.forEach(e => { %>
                <tr>
                    <td><%= e.id %></td>
                    <td><%= e.title %></td>
                    <td><%= e.desc %></td>
                    <td><img src="images/background/<%= e.image %>"></td>
                    <td><%= e.video %></td>
                    <td>
                        <a href="/remove/<%= e.id %>">Remove</a>
                        <br><br>
                        <a href="/update/<%= e.id %>">Update</a>
                    </td>
                </tr>
		    <% }); %>
        </table>
    </body>
</html>